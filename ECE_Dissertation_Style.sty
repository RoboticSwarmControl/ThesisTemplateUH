\newcommand{\advisor}[1]{%
  \@ifnextchar[{\advisor@i{#1}}{\advisor@i{#1}[\@department]}%]
}
\def\advisor@i#1[#2]{%
  \@ifnextchar[{\advisor@ii{#1}[#2]}{\advisor@ii{#1}[#2][ ]}%]
}
